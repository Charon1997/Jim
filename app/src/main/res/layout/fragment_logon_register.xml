<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.6"
    android:background="@drawable/register_background">

    <RelativeLayout
        android:layout_marginTop="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/logo_logon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@mipmap/ic_launcher_white"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="登录"
            android:layout_marginLeft="8dp"
            android:textSize="24sp"
            android:textColor="@color/textWhite"
            android:gravity="center"
            android:layout_toRightOf="@id/logo_logon"
            android:layout_alignBottom="@id/logo_logon"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@id/logo_logon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">
            <android.support.design.widget.TextInputLayout
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintColor"
                android:hint="电话号码">
                <EditText
                    android:id="@+id/et_username_logon_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/textWhite"/>
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/hintColor"
                android:layout_marginBottom="16dp"
                android:hint="登录密码">
                <EditText
                    android:id="@+id/et_password_logon_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:maxLength="18"
                    android:maxLines="1"
                    android:textColor="@color/textWhite"/>
            </android.support.design.widget.TextInputLayout>


            <Button
                android:alpha="0.7"
                android:id="@+id/btn_send_logon_register"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="登录"
                android:textSize="18sp"
                android:textColor="@color/textWhite"
                android:background="@drawable/btn_down"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_to_login_logon_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="新用户注册"
            android:textColor="@color/textWhite"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/tv_to_forget_logon_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="忘记密码"
            android:textColor="@color/textWhite"
            android:textSize="14sp"/>
    </RelativeLayout>
</LinearLayout>